<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <%= render @post %>
  <div class="mt-2">
    <%= link_to 'Modifier ce truc', edit_post_path(@post), class: "btn-secondary inline-block" %>
    <%= link_to 'Supprimer ce truc', post_path(@post), class: "btn-secondary inline-block ml-2", data: { 'turbo-method': :delete } %>
    <%= link_to 'Retourner aux trucs', posts_path, class: "btn-secondary inline-block ml-2" %>
  </div>
</div>
