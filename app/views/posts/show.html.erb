<div class="w-full">
  <%- if @post.user == current_user %>
    <div class="mb-2">
      <%= link_to t('.edit'), edit_post_path(@post), class: "btn-secondary inline-block" %>
      <%= link_to t('.delete'), post_path(@post), class: "btn-secondary inline-block ml-2", data: { 'turbo-method': :delete } %>
    </div>
  <% end %>
  <%= render @post %>
  <%= turbo_frame_tag "reply-form" do %>
    <%= render 'reply_form', post: @reply %>
  <% end %>
  <%= turbo_stream_from "#{dom_id(@post)}-replies"%>
  <div id="replies" class="min-w-full py-6 pl-12">
    <%= turbo_frame_tag "posts" do %>
      <%= render @replies %>
    <% end %>
  </div>
</div>
