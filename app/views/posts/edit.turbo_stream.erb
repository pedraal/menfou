<%= turbo_stream.append "modal" do %>
  <%= render Ui::ModalComponent.new(id: 'edit-post-modal') do |modal| %>
    <%- modal.body do %>
      <%= content_tag('h3', t('.title'), class: 'text-xl')%>
      <%= render 'form', post: @post %>
      <%= tag.div class: 'inline-block' do %>
        <%= button_to t('.delete'), post_path(@post), class: "btn-secondary", method: :delete, data: { turbo: false } %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
