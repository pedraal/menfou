<div class="w-full">
  <%= render @user %>
  <div class="flex justify-between items-center mt-4">
    <h3 class="font-semibold sm:font-bold text-2xl sm:text-4xl"><%= t(".title.#{ current_user == @user ? 'mine' : 'others' }") %></h1>
    <%- unless @user == current_user %>
      <%= render 'follow_actions', follow: @follow, user: @user%>
    <% end %>
  </div>
  <div class="min-w-full py-6">
    <%= turbo_frame_tag "follower_users" do %>
      <%= render 'grid', users: @follower_users %>
    <% end %>
  </div>
  <%= render 'shared/load_more', records: @follower_users, url: followers_user_path(@user) %>
</div>
