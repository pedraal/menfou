<div id="<%= dom_id user %>">
  <p class="my-5 flex items-center gap-4">
    <%= user_big_avatar_tag(user) %>
    <span class="text-[40px]">
      <%= user_handle(user) %>
    </span>
  </p>
  <% if action_name != "show" %>
    <%= link_to t('.show'), user, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to_if user == current_user, t('.edit'), edit_user_path(user), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
