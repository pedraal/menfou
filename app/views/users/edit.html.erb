<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl"><%= t('.title')%></h1>
  <%= render "form", user: @user %>
  <div class="inline">
    <%= link_to t('.show').html_safe, @user, class: "btn-secondary" %>
